generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Transcript {
  id        String   @id @default(uuid())
  content   String
  hash      String   @unique
  createdAt DateTime @default(now())

  tasks     Task[]
}

model Task {
  id           String
  transcriptId String
  transcript   Transcript   @relation(fields: [transcriptId], references: [id], onDelete: Cascade)

  description  String
  priority     TaskPriority
  dependencies Json
  status       TaskStatus

  @@id([transcriptId, id])
}

enum TaskPriority {
  low
  medium
  high
}

enum TaskStatus {
  ready
  blocked
  error
}
